@model List<OBeefSoup.Models.CartItem>
@{
    ViewData["Title"] = "Giỏ hàng";
    var cartTotal = ViewBag.CartTotal ?? 0m;
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8">
            <h2 class="mb-4">
                <i class="bi bi-cart3 me-2"></i>Giỏ hàng của bạn
            </h2>

            @if (Model.Count == 0)
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    Giỏ hàng trống. <a asp-controller="Home" asp-action="Index">Tiếp tục mua sắm</a>
                </div>
            }
            else
            {
                <div class="cart-table-container">
                    <table class="table cart-table">
                        <thead>
                            <tr>
                                <th>Món ăn</th>
                                <th>Đơn giá</th>
                                <th width="150">Số lượng</th>
                                <th>Tổng</th>
                                <th width="50"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@item.ImageUrl" alt="@item.ProductName" class="cart-item-image me-3">
                                            <div>
                                                <h6 class="mb-0">@item.ProductName</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        <strong>@item.Price.ToString("N0")đ</strong>
                                    </td>
                                    <td class="align-middle">
                                        <div class="quantity-control">
                                            <button class="btn btn-sm btn-outline-secondary" 
                                                    onclick="updateCartQuantity(@item.ProductId, @(item.Quantity - 1))">
                                                <i class="bi bi-dash"></i>
                                            </button>
                                            <input type="number" class="form-control form-control-sm text-center mx-2" 
                                                   value="@item.Quantity" min="1" readonly style="width: 60px;">
                                            <button class="btn btn-sm btn-outline-secondary"
                                                    onclick="updateCartQuantity(@item.ProductId, @(item.Quantity + 1))">
                                                <i class="bi bi-plus"></i>
                                            </button>
                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        <strong class="text-primary">@item.Subtotal.ToString("N0")đ</strong>
                                    </td>
                                    <td class="align-middle">
                                        <button class="btn btn-sm btn-outline-danger" 
                                                onclick="removeCartItem(@item.ProductId)"
                                                title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Tiếp tục mua sắm
                    </a>
                </div>
            }
        </div>

        @if (Model.Count > 0)
        {
            <div class="col-lg-4">
                <div class="cart-summary">
                    <h4 class="mb-4">Tóm tắt đơn hàng</h4>
                    
                    <div class="summary-row">
                        <span>Tạm tính:</span>
                        <strong>@cartTotal.ToString("N0")đ</strong>
                    </div>
                    
                    <div class="summary-row">
                        <span>Phí giao hàng:</span>
                        <small class="text-muted">Miễn phí</small>
                    </div>
                    
                    <hr>
                    
                    <div class="summary-row total">
                        <strong>Tổng cộng:</strong>
                        <strong class="text-primary">@cartTotal.ToString("N0")đ</strong>
                    </div>

                    <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary w-100 mt-4">
                        <i class="bi bi-credit-card me-2"></i>Tiến hành thanh toán
                    </a>

                    <div class="mt-3 text-center">
                        <small class="text-muted">
                            <i class="bi bi-shield-check me-1"></i>
                            Thanh toán an toàn và bảo mật
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
