@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using OBeefSoup.Data
@inject ApplicationDbContext DbContext
@{
    var settings = DbContext.SiteSettings.Where(s => s.IsActive).ToList();
    
    var bgImg = settings.FirstOrDefault(s => s.Key == "MenuBackgroundImage")?.Value ?? "";
    var bgOp = settings.FirstOrDefault(s => s.Key == "MenuBackgroundOpacity")?.Value ?? "0.1";
    
    var footerDesc = settings.FirstOrDefault(s => s.Key == "FooterDescription")?.Value ?? "Tinh hoa phở Việt – Đậm vị từ tâm. Mang đến trải nghiệm ẩm thực phở bò thượng hạng trong không gian đẳng cấp.";
    var footerAddr = settings.FirstOrDefault(s => s.Key == "FooterAddress")?.Value ?? "Tòa CT2B, khu ĐTM Nghĩa Đô, đường Xuân Tảo, Hanoi, Vietnam";
    var footerPhone = settings.FirstOrDefault(s => s.Key == "FooterPhone")?.Value ?? "0901 234 567";
    var footerEmail = settings.FirstOrDefault(s => s.Key == "FooterEmail")?.Value ?? "contact@obeefsoup.vn";
    var footerHours = settings.FirstOrDefault(s => s.Key == "FooterWorkingHours")?.Value ?? "Thứ 2 - Chủ nhật: 07:00 - 22:00";
    
    var fbLink = settings.FirstOrDefault(s => s.Key == "SocialFacebook")?.Value ?? "#";
    var igLink = settings.FirstOrDefault(s => s.Key == "SocialInstagram")?.Value ?? "#";
    var ytLink = settings.FirstOrDefault(s => s.Key == "SocialYoutube")?.Value ?? "#";
    var tkLink = settings.FirstOrDefault(s => s.Key == "SocialTiktok")?.Value ?? "#";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="O' BeefSoup - Tinh hoa phở Việt, đậm vị từ tâm. Phở bò cao cấp với nước dùng ninh 12 tiếng, thịt bò tươi ngon mỗi ngày." />
    <meta name="keywords" content="phở, phở bò, O' BeefSoup, phở cao cấp, ẩm thực Việt Nam, Vietnamese pho" />
    <meta name="author" content="O' BeefSoup" />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="@ViewData["Title"] - O' BeefSoup" />
    <meta property="og:description" content="Tinh hoa phở Việt – Đậm vị từ tâm" />
    <meta property="og:type" content="website" />
    
    <title>@ViewData["Title"] - O' BeefSoup</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    @if (!string.IsNullOrEmpty(bgImg))
    {
        <style>
            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-image: url('@bgImg');
                background-attachment: fixed;
                background-size: cover;
                background-position: center;
                opacity: @bgOp;
                z-index: -1;
                pointer-events: none;
            }
            main, section, .content-wrapper {
                background-color: transparent !important;
            }
        </style>
    }
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top glass-nav">
        <div class="container-fluid px-lg-5">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <span class="brand-logo">O' BeefSoup</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                @{
                    var custName = Context.Session.GetString("CustomerName");
                    var custId   = Context.Session.GetString("CustomerId");
                    bool loggedIn = !string.IsNullOrEmpty(custId);
                    
                    var adminRole = Context.Session.GetString("AdminUserRole");
                    bool isAdminLoggedIn = !string.IsNullOrEmpty(adminRole);
                }
                <ul class="navbar-nav ms-auto align-items-center">
                    @await Component.InvokeAsync("Menu")

                    <li class="nav-item">
                        <a href="/Cart" class="nav-link position-relative" style="z-index: 9999; pointer-events: auto !important;" onclick="window.location.href='/Cart'; return true;">
                            <i class="bi bi-cart3"></i> @Localizer["Cart"]
                            <span class="cart-badge" id="cartBadge" style="display: none;">0</span>
                        </a>
                    </li>

                    @if (loggedIn)
                    {
                        <li class="nav-item dropdown ms-lg-2">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="custDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle fs-5 me-2"></i>
                                <span class="d-none d-xl-inline">@custName</span>
                                <span class="d-inline d-xl-none">@Localizer["Me"]</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 animate-fade-in" style="border-radius: 12px; min-width: 200px;">
                                <li><h6 class="dropdown-header text-uppercase small fw-bold">@Localizer["Account"]</h6></li>
                                
                                @if (isAdminLoggedIn)
                                {
                                    <li>
                                        <a class="dropdown-item py-2" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                            <i class="bi bi-shield-lock-fill text-warning me-2"></i>@Localizer["AdminPanel"]
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                }

                                <li>
                                    <a class="dropdown-item py-2 text-danger" asp-controller="CustomerAccount" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right me-2"></i>@Localizer["Logout"]
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-controller="CustomerAccount" asp-action="Login"
                               class="nav-link">
                                <i class="bi bi-box-arrow-in-right me-1"></i>@Localizer["Login"]
                            </a>
                        </li>
                        <li class="nav-item ms-1">
                            <a asp-controller="CustomerAccount" asp-action="Register"
                               class="btn btn-sm px-3 py-1"
                               style="background:#8B0000;color:white;border-radius:20px;font-size:0.85rem;">
                                <i class="bi bi-person-plus me-1"></i>@Localizer["Register"]
                            </a>
                        </li>
                    }

                    <!-- Language Switcher - Moved to the far right -->
                    <li class="nav-item dropdown ms-lg-3 pe-lg-2">
                        @{
                            var requestCulture = Context.Features.Get<Microsoft.AspNetCore.Localization.IRequestCultureFeature>();
                            var currentCulture = requestCulture?.RequestCulture.Culture.Name ?? "vi-VN";
                            var currentFlag = currentCulture == "vi-VN" ? "vn" : "gb";
                            var currentLabel = currentCulture == "vi-VN" ? "VI" : "EN";
                        }
                        <a class="nav-link dropdown-toggle d-flex align-items-center px-2" href="#" id="langDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://flagcdn.com/w20/@(currentFlag).png" alt="@currentLabel" class="me-lg-2 rounded-1 shadow-sm" style="width: 20px;">
                            <span class="d-none d-xl-inline">@currentLabel</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 animate-fade-in mt-2" aria-labelledby="langDropdown" style="border-radius: 12px; min-width: 140px; background: rgba(255,255,255,0.95); backdrop-filter: blur(10px);">
                            <li>
                                <form asp-controller="Language" asp-action="SetLanguage" method="post" class="d-inline">
                                    <input type="hidden" name="culture" value="vi-VN" />
                                    <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                    <button type="submit" class="dropdown-item d-flex align-items-center py-2 @(currentCulture == "vi-VN" ? "active" : "")">
                                        <img src="https://flagcdn.com/w20/vn.png" alt="VN" class="me-3 rounded-1 shadow-sm" style="width: 20px;">
                                        <span>Tiếng Việt</span>
                                    </button>
                                </form>
                            </li>
                            <li>
                                <form asp-controller="Language" asp-action="SetLanguage" method="post" class="d-inline">
                                    <input type="hidden" name="culture" value="en-US" />
                                    <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                    <button type="submit" class="dropdown-item d-flex align-items-center py-2 @(currentCulture == "en-US" ? "active" : "")">
                                        <img src="https://flagcdn.com/w20/gb.png" alt="EN" class="me-3 rounded-1 shadow-sm" style="width: 20px;">
                                        <span>English</span>
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row g-5">
                <div class="col-md-5 mb-4">
                    <h5 class="brand-logo mb-3" style="font-size: 2.2rem;">O' BeefSoup</h5>
                    <p class="mb-4" style="color: rgba(255,255,255,0.6); max-width: 350px;">
                        @footerDesc
                    </p>
                    <div class="social-links mt-4">
                        <a href="@fbLink" class="me-3" target="_blank"><i class="bi bi-facebook"></i></a>
                        <a href="@igLink" class="me-3" target="_blank"><i class="bi bi-instagram"></i></a>
                        <a href="@ytLink" class="me-3" target="_blank"><i class="bi bi-youtube"></i></a>
                        <a href="@tkLink" target="_blank"><i class="bi bi-tiktok"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-4 text-center text-md-start">
                    <h6 class="text-uppercase mb-4 fw-bold">Thông tin liên hệ</h6>
                    <div class="contact-info">
                        <p class="mb-3 d-flex align-items-center justify-content-center justify-content-md-start">
                            <i class="bi bi-geo-alt-fill text-secondary me-3 fs-5"></i>
                            <span style="color: rgba(255,255,255,0.8);">@footerAddr</span>
                        </p>
                        <p class="mb-3 d-flex align-items-center justify-content-center justify-content-md-start">
                            <i class="bi bi-telephone-fill text-secondary me-3 fs-5"></i>
                            <a href="tel:@(footerPhone.Replace(" ", ""))" class="text-decoration-none" style="color: rgba(255,255,255,0.8);">@footerPhone</a>
                        </p>
                        <p class="mb-3 d-flex align-items-center justify-content-center justify-content-md-start">
                            <i class="bi bi-envelope-fill text-secondary me-3 fs-5"></i>
                            <a href="mailto:@footerEmail" class="text-decoration-none" style="color: rgba(255,255,255,0.8);">@footerEmail</a>
                        </p>
                    </div>
                </div>
                <div class="col-md-3 mb-4 text-center text-md-start">
                    <h6 class="text-uppercase mb-4 fw-bold">Giờ mở cửa</h6>
                    <div class="opening-hours">
                        <p class="mb-0 fw-bold" style="color: var(--color-secondary); font-size: 1.1rem; line-height: 1.4;">
                            @footerHours
                        </p>
                    </div>
                </div>
            </div>
            <div class="footer-bottom mt-5 pt-4" style="border-top: 1px solid rgba(255,255,255,0.05);">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start">
                        <p class="mb-0 small" style="color: rgba(255,255,255,0.3);">&copy; 2026 O' BeefSoup. All rights reserved.</p>
                    </div>
                    @* <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                        <img src="~/images/payment-methods.png" alt="Payment Methods" style="height: 25px; opacity: 0.5; filter: grayscale(100%);">
                    </div> *@
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/cart.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
