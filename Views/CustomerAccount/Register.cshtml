@{
    Layout = null;
    ViewData["Title"] = "Đăng Ký Tài Khoản";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - O'BeefSoup</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        * { box-sizing: border-box; }
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #1a0a0a 0%, #3d1515 50%, #8B0000 100%);
            display: flex; align-items: center; justify-content: center;
            font-family: 'Inter', sans-serif; padding: 2rem 1rem;
        }
        .auth-card {
            background: rgba(255,255,255,0.07);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255,255,255,0.12);
            border-radius: 20px; padding: 2.5rem;
            width: 100%; max-width: 500px;
            box-shadow: 0 25px 50px rgba(0,0,0,0.4);
        }
        .brand { text-align: center; margin-bottom: 2rem; }
        .brand h2 { color: white; font-family: 'Playfair Display', serif; font-size: 1.6rem; margin: 0; }
        .brand p { color: rgba(255,255,255,0.5); font-size: 0.85rem; margin: 0.3rem 0 0; }
        .form-label { color: rgba(255,255,255,0.8); font-size: 0.875rem; font-weight: 500; }
        .form-control {
            background: rgba(255,255,255,0.08);
            border: 1px solid rgba(255,255,255,0.15);
            color: white; border-radius: 10px; padding: 0.7rem 1rem 0.7rem 2.4rem;
            transition: all 0.2s;
        }
        .form-control:focus {
            background: rgba(255,255,255,0.12);
            border-color: #8B0000;
            box-shadow: 0 0 0 3px rgba(139,0,0,0.25); color: white;
        }
        .form-control::placeholder { color: rgba(255,255,255,0.3); }
        .input-icon { position: relative; }
        .input-icon i {
            position: absolute; left: 12px; top: 50%; transform: translateY(-50%);
            color: rgba(255,255,255,0.4); z-index: 5;
        }
        .btn-primary-red {
            background: linear-gradient(135deg, #8B0000, #c0392b);
            border: none; color: white; font-weight: 600; padding: 0.8rem;
            border-radius: 10px; width: 100%; transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(139,0,0,0.4);
        }
        .btn-primary-red:hover { transform: translateY(-1px); }
        .divider { border-color: rgba(255,255,255,0.1); margin: 1.5rem 0; }
        .link-light-custom { color: rgba(255,255,255,0.6); font-size: 0.875rem; }
        .link-light-custom a { color: #ffb347; text-decoration: none; font-weight: 500; }
        .alert-err {
            background: rgba(220,53,69,0.15); border: 1px solid rgba(220,53,69,0.3);
            color: #ff6b7a; border-radius: 10px; padding: 0.7rem 1rem; font-size: 0.875rem;
        }
        .back-link {
            color: rgba(255,255,255,0.45); font-size: 0.85rem; text-decoration: none;
            display: flex; align-items: center; gap: 0.4rem; justify-content: center;
            margin-top: 1.5rem; transition: color 0.2s;
        }
        .back-link:hover { color: rgba(255,255,255,0.9); }
        .required-star { color: #ff6b7a; }
        .form-text-light { color: rgba(255,255,255,0.4); font-size: 0.78rem; }
    </style>
</head>
<body>
    <div style="width:100%;max-width:500px;">
        <div class="auth-card">
            <div class="brand">
                <h2>O' BeefSoup</h2>
                <p>Tạo tài khoản để đặt hàng &amp; nhận ưu đãi</p>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Error as string))
            {
                <div class="alert-err mb-3">
                    <i class="bi bi-exclamation-circle me-2"></i>@ViewBag.Error
                </div>
            }

            <form asp-controller="CustomerAccount" asp-action="Register" method="post">
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <div class="col-12">
                        <label class="form-label">Họ &amp; Tên <span class="required-star">*</span></label>
                        <div class="input-icon">
                            <i class="bi bi-person"></i>
                            <input type="text" class="form-control" name="fullName"
                                   placeholder="Nguyễn Văn A" required maxlength="100" />
                        </div>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Email <span class="required-star">*</span></label>
                        <div class="input-icon">
                            <i class="bi bi-envelope"></i>
                            <input type="email" class="form-control" name="email"
                                   placeholder="example@email.com" required maxlength="100" />
                        </div>
                        <div class="form-text-light mt-1">Dùng để đăng nhập, không chia sẻ với bên thứ 3</div>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Số Điện Thoại <span class="required-star">*</span></label>
                        <div class="input-icon">
                            <i class="bi bi-telephone"></i>
                            <input type="tel" class="form-control" name="phone"
                                   placeholder="0901 234 567" required maxlength="15" />
                        </div>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Địa Chỉ Giao Hàng</label>
                        <div class="input-icon">
                            <i class="bi bi-geo-alt"></i>
                            <input type="text" class="form-control" name="address"
                                   placeholder="Số nhà, đường, quận/huyện..." maxlength="200" />
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <label class="form-label">Mật Khẩu <span class="required-star">*</span></label>
                        <div class="input-icon">
                            <i class="bi bi-lock"></i>
                            <input type="password" class="form-control" name="password" id="pwd"
                                   placeholder="Tối thiểu 6 ký tự" required minlength="6" />
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <label class="form-label">Xác Nhận MK <span class="required-star">*</span></label>
                        <div class="input-icon">
                            <i class="bi bi-lock-fill"></i>
                            <input type="password" class="form-control" name="confirmPassword" id="confirmPwd"
                                   placeholder="Nhập lại mật khẩu" required />
                        </div>
                        <div id="matchMsg" class="form-text-light mt-1"></div>
                    </div>
                </div>

                <button type="submit" class="btn-primary-red mt-4">
                    <i class="bi bi-person-check me-2"></i>Tạo Tài Khoản
                </button>
            </form>

            <hr class="divider">
            <p class="text-center link-light-custom">
                Đã có tài khoản?
                <a asp-controller="CustomerAccount" asp-action="Login">Đăng nhập</a>
            </p>
        </div>
        <a href="/" class="back-link">
            <i class="bi bi-arrow-left"></i> Về trang chủ
        </a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const pwd = document.getElementById('pwd');
        const confirmPwd = document.getElementById('confirmPwd');
        const matchMsg = document.getElementById('matchMsg');
        confirmPwd.addEventListener('input', () => {
            if (!confirmPwd.value) { matchMsg.textContent = ''; return; }
            matchMsg.textContent = pwd.value === confirmPwd.value ? '✓ Khớp' : '✗ Chưa khớp';
            matchMsg.style.color = pwd.value === confirmPwd.value ? '#4ade80' : '#ff6b7a';
        });
    </script>
</body>
</html>
