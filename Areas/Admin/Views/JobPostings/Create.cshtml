@model OBeefSoup.Models.JobPosting
@{
    ViewData["Title"] = "Thêm vị trí tuyển dụng";
}

<div class="container-fluid">
    <div class="mb-4">
        <a asp-action="Index" class="text-decoration-none text-muted small d-flex align-items-center gap-1">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
        <h3 class="fw-bold mb-0 mt-2">Thêm vị trí tuyển dụng mới</h3>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold">Vị trí tuyển dụng <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control" placeholder="Ví dụ: Nhân viên phục vụ, Đầu bếp..." />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="StoreLocationId" class="form-label fw-bold">Cơ sở tuyển dụng</label>
                            <select asp-for="StoreLocationId" class="form-select" asp-items="@(new SelectList(ViewBag.StoreLocationId, "Id", "Name"))">
                                <option value="">Tất cả cơ sở</option>
                            </select>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="SalaryRange" class="form-label fw-bold">Mức lương</label>
                                <input asp-for="SalaryRange" class="form-control" placeholder="Ví dụ: 7 - 10 triệu, Thỏa thuận..." />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Deadline" class="form-label fw-bold">Hạn nộp hồ sơ</label>
                                <input asp-for="Deadline" class="form-control" type="date" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">Mô tả công việc <span class="text-danger">*</span></label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Mô tả các công việc cần thực hiện..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Requirements" class="form-label fw-bold">Yêu cầu công việc</label>
                            <textarea asp-for="Requirements" class="form-control" rows="5" placeholder="Các yêu cầu đối với ứng viên..."></textarea>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Benefits" class="form-label fw-bold">Quyền lợi</label>
                            <textarea asp-for="Benefits" class="form-control" rows="5" placeholder="Các quyền lợi ứng viên nhận được..."></textarea>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch p-0 ps-5">
                                <input class="form-check-input ms-n5" type="checkbox" asp-for="IsActive" checked>
                                <label class="form-check-label fw-bold" asp-for="IsActive">Công khai trên website</label>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-light border px-4">Hủy</a>
                            <button type="submit" class="btn btn-primary px-4">Lưu vị trí</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">Lưu ý khi tạo tuyển dụng</h6>
                    <ul class="text-muted small ps-3 mb-0">
                        <li class="mb-2"><strong>Mô tả chi tiết</strong> giúp ứng viên hiểu rõ công việc hơn.</li>
                        <li class="mb-2"><strong>Yêu cầu rõ ràng</strong> giúp lọc bớt hồ sơ không phù hợp.</li>
                        <li class="mb-2"><strong>Mức lương minh bạch</strong> thu hút nhiều ứng viên tiềm năng hơn.</li>
                        <li>Trạng thái <strong>Công khai</strong> sẽ hiển thị tin tuyển dụng ngay lên trang chủ.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
