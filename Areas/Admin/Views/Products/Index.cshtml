@model List<OBeefSoup.Models.Product>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-0">Quản lý sản phẩm</h3>
            <p class="text-muted small mb-0">Xem, tìm kiếm và cập nhật các món ăn trong thực đơn của bạn.</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2 shadow-sm">
                <i class="bi bi-plus-lg"></i> Thêm sản phẩm mới
            </a>
        </div>
    </div>

    <!-- Filter & Search Card -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body py-3">
            <form method="get" asp-action="Index" class="row g-2">
                <div class="col-8 col-md-9">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" name="searchTerm" class="form-control bg-light border-0" 
                               placeholder="Tìm tên sản phẩm..." 
                               value="@ViewBag.SearchTerm">
                    </div>
                </div>
                <div class="col-4 col-md-3 d-flex gap-2">
                    <button type="submit" class="btn btn-dark w-100 px-1">Tìm</button>
                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <a asp-action="Index" class="btn btn-outline-secondary px-2" title="Xóa tìm kiếm">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>

    <!-- Products Table Card (Desktop) -->
    <div class="card border-0 shadow-sm overflow-hidden d-none d-lg-block">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light bg-opacity-50">
                        <tr class="text-muted small">
                            <th class="ps-4 border-0">Sản phẩm</th>
                            <th class="border-0">Danh mục</th>
                            <th class="border-0">Đơn giá</th>
                            <th class="border-0">Tồn kho</th>
                            <th class="border-0">Trạng thái</th>
                            <th class="border-0 text-center">Nổi bật</th>
                            <th class="text-end pe-4 border-0">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <img src="@product.ImageUrl" alt="@product.Name" 
                                             class="rounded-3 shadow-sm"
                                             style="width: 50px; height: 50px; object-fit: cover; border: 1px solid #eee;" 
                                             onerror="this.src='https://placehold.co/50x50/8B0000/FFF?text=N/A'" />
                                        <div style="min-width: 0;">
                                            <div class="fw-bold text-dark text-truncate" style="max-width: 250px;">@product.Name</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary-subtle text-secondary py-1 px-2 rounded-pill small">
                                        @product.Category?.Name
                                    </span>
                                </td>
                                <td>
                                    <span class="fw-bold text-dark">@product.Price.ToString("N0")đ</span>
                                </td>
                                <td>
                                    @if (product.Stock > 20)
                                    {
                                        <span class="text-success small"><i class="bi bi-check2-circle me-1"></i>Còn hàng (@product.Stock)</span>
                                    }
                                    else if (product.Stock > 0)
                                    {
                                        <span class="text-warning small"><i class="bi bi-exclamation-triangle me-1"></i>Sắp hết (@product.Stock)</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger small"><i class="bi bi-x-circle me-1"></i>Hết hàng</span>
                                    }
                                </td>
                                <td>
                                    @if (product.IsActive)
                                    {
                                        <span class="badge bg-success-subtle text-success py-1 px-2 rounded-pill small">Bán</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-muted py-1 px-2 rounded-pill small">Ngừng</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (product.IsFeatured)
                                    {
                                        <span class="text-warning"><i class="bi bi-star-fill"></i></span>
                                    }
                                    else
                                    {
                                        <span class="text-muted opacity-25"><i class="bi bi-star"></i></span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-light border dropdown-toggle no-caret px-2" data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow-sm small">
                                            <li><a class="dropdown-item py-2" asp-action="Edit" asp-route-id="@product.Id"><i class="bi bi-pencil me-2"></i> Sửa</a></li>
                                            <li><a class="dropdown-item py-2 text-danger" asp-action="Delete" asp-route-id="@product.Id"><i class="bi bi-trash me-2"></i> Xóa</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Mobile Product Grid -->
    <div class="row g-3 d-lg-none">
        @foreach (var product in Model)
        {
            <div class="col-6">
                <div class="card border-0 shadow-sm h-100 product-card-mobile p-2">
                    <img src="@product.ImageUrl" alt="@product.Name" 
                         class="card-img-top rounded-4 mb-2"
                         style="height: 120px; object-fit: cover;"
                         onerror="this.src='https://placehold.co/200x120/8B0000/FFF?text=N/A'" />
                    <div class="card-body p-1">
                        <div class="d-flex justify-content-between align-items-start mb-1">
                            <div class="fw-bold text-dark text-truncate small" style="max-width: 80%;">@product.Name</div>
                            @if (product.IsFeatured) { <i class="bi bi-star-fill text-warning x-small"></i> }
                        </div>
                        <div class="fw-bold text-accent small mb-2">@product.Price.ToString("N0")đ</div>
                        <div class="d-flex gap-1 mb-2">
                            <span class="badge bg-light text-muted x-small border rounded-pill">@product.Category?.Name</span>
                        </div>
                        <div class="d-grid">
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-white border shadow-sm py-2">
                                <i class="bi bi-pencil me-1"></i> Quản lý
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <div class="d-flex justify-content-between align-items-center mt-4 text-muted small px-2">
        <div>Hiển thị <strong>@Model.Count</strong> sản phẩm</div>
    </div>
</div>

<style>
    .x-small { font-size: 0.75rem; }
    .no-caret::after { display: none; }
    .table > :not(caption) > * > * { padding: 1.25rem 0.75rem; }
    .bg-secondary-subtle { background-color: #f0f1f2; color: #4b4b5f; }
</style>
