@model IEnumerable<OBeefSoup.Models.SiteSetting>

@{
    ViewData["Title"] = "Cài Đặt Website";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-gear me-2"></i>Cài Đặt Website
        </h1>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">Danh Sách Cài Đặt</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Giá Trị</th>
                            <th>Mô Tả</th>
                            <th>Trạng Thái</th>
                            <th>Cập Nhật</th>
                            <th style="width: 120px;">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.Key</strong></td>
                                <td>
                                    @if (item.Key.Contains("Image"))
                                    {
                                        <img src="@item.Value" alt="Preview" style="max-width: 100px; max-height: 60px;" class="rounded" />
                                    }
                                    else
                                    {
                                        @item.Value
                                    }
                                </td>
                                <td>@item.Description</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Kích hoạt</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Tắt</span>
                                    }
                                </td>
                                <td>
                                    @if (item.UpdatedDate.HasValue)
                                    {
                                        @item.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
