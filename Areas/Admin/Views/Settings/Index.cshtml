@model IEnumerable<OBeefSoup.Models.SiteSetting>

@{
    ViewData["Title"] = "Cài Đặt Website";
}

<div class="container-fluid">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
        <div>
            <h3 class="fw-bold mb-0">Cài Đặt Website</h3>
            <p class="text-muted small mb-0">Quản lý cấu hình, thông tin liên hệ và các thiết lập hệ thống.</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light bg-opacity-50">
                        <tr class="text-muted small">
                            <th class="ps-4 border-0">Tên thiết lập</th>
                            <th class="border-0">Giá Trị</th>
                            <th class="border-0 d-none d-lg-table-cell">Mô Tả</th>
                            <th class="border-0">Trạng Thái</th>
                            <th class="border-0 d-none d-md-table-cell">Cập Nhật</th>
                            <th class="text-end pe-4 border-0" style="width: 120px;">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@item.Key</div>
                                    <div class="d-lg-none x-small text-muted text-truncate" style="max-width: 150px;">@item.Description</div>
                                </td>
                                <td>
                                    @if (item.Key.Contains("Image") || item.Key.Contains("Logo"))
                                    {
                                        <img src="@item.Value" alt="Preview" style="width: 60px; height: 35px; object-fit: contain;" class="rounded border shadow-sm bg-light" />
                                    }
                                    else
                                    {
                                        <div class="text-truncate" style="max-width: 200px;">@item.Value</div>
                                    }
                                </td>
                                <td class="d-none d-lg-table-cell small text-muted">@item.Description</td>
                                <td>
                                    <span class="badge @(item.IsActive ? "bg-success-subtle text-success" : "bg-light text-muted") rounded-pill x-small">
                                        @(item.IsActive ? "Bật" : "Tắt")
                                    </span>
                                </td>
                                <td class="d-none d-md-table-cell small text-muted">
                                    @if (item.UpdatedDate.HasValue)
                                    {
                                        @item.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted opacity-50">N/A</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light border px-2 shadow-sm">
                                        <i class="bi bi-pencil"></i> <span class="d-none d-sm-inline">Sửa</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .x-small { font-size: 0.75rem; }
    .table > :not(caption) > * > * { padding: 1rem 0.75rem; }
</style>
