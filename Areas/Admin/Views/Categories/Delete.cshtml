@model OBeefSoup.Models.Category
@{
    ViewData["Title"] = "Xác nhận xóa danh mục";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm border-top border-danger border-4">
                <div class="card-body p-4 text-center">
                    <i class="bi bi-exclamation-octagon text-danger display-1 mb-3"></i>
                    <h3 class="fw-bold mb-2">Xác nhận xóa?</h3>
                    <p class="text-muted mb-4">Bạn có chắc chắn muốn xóa danh mục <strong>@Model.Name</strong>? Hành động này không thể hoàn tác.</p>
                    
                    @if (Model.Products.Any())
                    {
                        <div class="alert alert-warning border-0 small mb-4">
                            <i class="bi bi-info-circle me-1"></i> 
                            Danh mục này đang chứa <strong>@Model.Products.Count</strong> sản phẩm. 
                            Hãy chuyển các sản phẩm này sang danh mục khác trước khi xóa.
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="d-flex justify-content-center gap-2">
                        <input type="hidden" asp-for="Id" />
                        
                        @if (Model.Products.Any())
                        {
                            <button type="button" class="btn btn-danger px-4 disabled" disabled>Xóa danh mục</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger px-4 shadow-sm">Xác nhận xóa</button>
                        }
                        
                        <a asp-action="Index" class="btn btn-light border px-4">Quay lại danh sách</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
