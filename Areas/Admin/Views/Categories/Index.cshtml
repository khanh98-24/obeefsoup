@model IEnumerable<OBeefSoup.Models.Category>
@{
    ViewData["Title"] = "Quản lý Danh mục sản phẩm";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-0">Danh mục sản phẩm</h3>
            <p class="text-muted small mb-0">Quản lý các nhóm sản phẩm để khách hàng dễ dàng tìm kiếm.</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary shadow-sm btn-sm px-3">
                <i class="bi bi-plus-lg me-1"></i> Thêm danh mục
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm mb-4">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light bg-opacity-50">
                        <tr class="text-muted small">
                            <th class="ps-4 border-0 d-none d-md-table-cell">Thứ tự</th>
                            <th class="border-0">Tên danh mục</th>
                            <th class="border-0 d-none d-lg-table-cell">Mô tả</th>
                            <th class="border-0">Trạng thái</th>
                            <th class="text-end pe-4 border-0">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-5">
                                    <i class="bi bi-folder-x display-4 opacity-25"></i>
                                    <p class="mt-2">Chưa có danh mục nào được tạo</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 d-none d-md-table-cell">
                                        <span class="badge bg-light text-dark border fw-normal">@item.DisplayOrder</span>
                                    </td>
                                    <td>
                                        <div class="fw-bold text-dark">@item.Name</div>
                                        <div class="d-lg-none x-small text-muted text-truncate" style="max-width: 150px;">@item.Description</div>
                                    </td>
                                    <td class="d-none d-lg-table-cell">
                                        <span class="text-muted small">@item.Description</span>
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-2 small">Bật</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill px-2 small">Tắt</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-white border">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-white border text-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table > :not(caption) > * > * { padding: 1.2rem 0.75rem; }
    .btn-white { background: #fff; }
    .btn-white:hover { background: #f8f9fa; }
</style>
