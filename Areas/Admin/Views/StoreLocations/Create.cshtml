@model OBeefSoup.Models.StoreLocation
@{
    var isEdit = Model.Id > 0;
    ViewData["Title"] = isEdit ? "Chỉnh sửa - " + Model.Name : "Thêm cơ sở mới";
    Layout = "_AdminLayout";
}

<div class="p-4">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h2 class="fw-bold mb-0">
                <i class="bi @(isEdit ? "bi-pencil-square text-primary" : "bi-plus-circle text-danger") me-2"></i>
                @(isEdit ? "Chỉnh sửa cơ sở" : "Thêm cơ sở mới")
            </h2>
            <small class="text-muted">Thông tin hiển thị trên trang chủ - section "Ghé thăm chúng tôi"</small>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="@(isEdit ? "Edit" : "Create")" method="post">
                        @Html.AntiForgeryToken()
                        @if (isEdit)
                        {
                            <input asp-for="Id" type="hidden" />
                        }

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Tên cơ sở <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" placeholder="VD: O' BeefSoup - Chi nhánh Trung tâm" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-semibold">Địa chỉ <span class="text-danger">*</span></label>
                            <input asp-for="Address" class="form-control" placeholder="VD: Tòa CT2B, khu ĐTM Nghĩa Đô, đường Xuân Tảo, Hanoi" />
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="City" class="form-label fw-semibold">Thành phố / Quận</label>
                                <input asp-for="City" class="form-control" placeholder="VD: Hà Nội" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="OpeningHours" class="form-label fw-semibold">Giờ mở cửa</label>
                                <input asp-for="OpeningHours" class="form-control" placeholder="VD: 7:00 - 22:00 (Hàng ngày)" />
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label fw-semibold">Số điện thoại</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                    <input asp-for="Phone" class="form-control" placeholder="VD: 0901234567" />
                                </div>
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" placeholder="VD: hanoi@obeefsoup.vn" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="MapUrl" class="form-label fw-semibold">URL nhúng bản đồ Google Maps</label>
                            <textarea asp-for="MapUrl" class="form-control" rows="3"
                                      placeholder="Dán link iframe src từ Google Maps (https://www.google.com/maps/embed?...)"></textarea>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Vào Google Maps → nhấn Share → Embed a map → copy phần <code>src="..."</code>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label fw-semibold">Hiển thị trên trang chủ</label>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn @(isEdit ? "btn-primary" : "btn-danger") px-4">
                                <i class="bi bi-check-circle me-1"></i>@(isEdit ? "Lưu thay đổi" : "Thêm cơ sở")
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0 py-3">
                    <h6 class="mb-0 fw-semibold"><i class="bi bi-info-circle me-2"></i>Hướng dẫn Map URL</h6>
                </div>
                <div class="card-body small text-muted">
                    <ol class="ps-3">
                        <li class="mb-2">Mở <a href="https://maps.google.com" target="_blank">Google Maps</a></li>
                        <li class="mb-2">Tìm địa chỉ cơ sở</li>
                        <li class="mb-2">Nhấn nút <strong>Share</strong> (Chia sẻ)</li>
                        <li class="mb-2">Chọn tab <strong>Embed a map</strong></li>
                        <li class="mb-2">Copy toàn bộ nội dung <code>src="..."</code></li>
                        <li>Dán vào ô Map URL bên trên</li>
                    </ol>
                </div>
            </div>
            @if (isEdit && !string.IsNullOrEmpty(Model.MapUrl))
            {
                <div class="card border-0 shadow-sm mt-3">
                    <div class="card-header bg-light border-0 py-3">
                        <h6 class="mb-0 fw-semibold"><i class="bi bi-map me-2"></i>Xem trước bản đồ</h6>
                    </div>
                    <div class="card-body p-0">
                        <iframe src="@Model.MapUrl" width="100%" height="200"
                                style="border:0;border-radius:0 0 8px 8px" allowfullscreen loading="lazy"></iframe>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
