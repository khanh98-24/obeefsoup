@model List<OBeefSoup.Models.AdminUser>
@{
    ViewData["Title"] = "Quản Lý Tài Khoản";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-1"><i class="bi bi-people me-2"></i>Quản Lý Tài Khoản</h3>
            <p class="text-muted mb-0">Danh sách tài khoản admin hệ thống</p>
        </div>
        <a asp-area="Admin" asp-controller="Account" asp-action="Register" class="btn btn-dark">
            <i class="bi bi-person-plus me-2"></i>Tạo Tài Khoản Mới
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show py-2" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show py-2" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th width="50">#</th>
                            <th>Tên Đăng Nhập</th>
                            <th>Họ &amp; Tên</th>
                            <th>Vai Trò</th>
                            <th>Ngày Tạo</th>
                            <th>Trạng Thái</th>
                            <th width="150" class="text-center">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var currentId = Context.Session.GetString("AdminUserId");
                        }
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="text-muted">@user.Id</td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="rounded-circle d-flex align-items-center justify-content-center text-white fw-bold"
                                             style="width:36px;height:36px;background:@(user.Role=="Admin"?"#8B0000":"#2c3e50");font-size:0.85rem;">
                                            @user.Username.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-medium">@user.Username</div>
                                            @if (currentId == user.Id.ToString())
                                            {
                                                <small class="text-success">(đang đăng nhập)</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>@user.FullName</td>
                                <td>
                                    @if (user.Role == "Admin")
                                    {
                                        <span class="badge" style="background:#8B0000;">
                                            <i class="bi bi-shield-fill me-1"></i>Admin
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-person-badge me-1"></i>Manager
                                        </span>
                                    }
                                </td>
                                <td class="text-muted small">@user.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Đã khóa</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (currentId != user.Id.ToString())
                                    {
                                        <form asp-area="Admin" asp-controller="Account" asp-action="ToggleStatus"
                                              method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="btn btn-sm @(user.IsActive ? "btn-outline-warning" : "btn-outline-success")"
                                                    title="@(user.IsActive ? "Khóa tài khoản" : "Mở khóa")">
                                                <i class="bi @(user.IsActive ? "bi-lock" : "bi-unlock")"></i>
                                            </button>
                                        </form>
                                        <form asp-area="Admin" asp-controller="Account" asp-action="Delete"
                                              method="post" class="d-inline"
                                              onsubmit="return confirm('Xóa tài khoản @user.Username?')">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">—</span>
                                    }
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr><td colspan="7" class="text-center text-muted py-4">Chưa có tài khoản nào</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
