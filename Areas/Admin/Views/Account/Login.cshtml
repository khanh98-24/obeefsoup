@{
    Layout = null;
    ViewData["Title"] = "Đăng Nhập Admin";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - O'BeefSoup</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #1a0a0a 0%, #3d1515 40%, #8B0000 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', sans-serif;
        }

        .login-container {
            width: 100%;
            max-width: 440px;
            padding: 1rem;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
        }

        .brand-logo {
            text-align: center;
            margin-bottom: 2rem;
        }

        .brand-logo .icon-wrap {
            width: 72px;
            height: 72px;
            background: linear-gradient(135deg, #8B0000, #c0392b);
            border-radius: 18px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
            box-shadow: 0 8px 24px rgba(139, 0, 0, 0.4);
        }

        .brand-logo .icon-wrap i {
            font-size: 2rem;
            color: white;
        }

        .brand-logo h4 {
            color: white;
            font-weight: 700;
            margin: 0;
            letter-spacing: -0.5px;
        }

        .brand-logo p {
            color: rgba(255,255,255,0.5);
            font-size: 0.85rem;
            margin: 0.25rem 0 0;
        }

        .form-label {
            color: rgba(255,255,255,0.8);
            font-size: 0.875rem;
            font-weight: 500;
            margin-bottom: 0.4rem;
        }

        .form-control {
            background: rgba(255,255,255,0.08);
            border: 1px solid rgba(255,255,255,0.15);
            color: white;
            border-radius: 10px;
            padding: 0.7rem 1rem;
            transition: all 0.2s;
        }

        .form-control:focus {
            background: rgba(255,255,255,0.12);
            border-color: rgba(139, 0, 0, 0.8);
            box-shadow: 0 0 0 3px rgba(139, 0, 0, 0.2);
            color: white;
        }

        .form-control::placeholder {
            color: rgba(255,255,255,0.3);
        }

        .input-group-text {
            background: rgba(255,255,255,0.08);
            border: 1px solid rgba(255,255,255,0.15);
            border-right: none;
            color: rgba(255,255,255,0.5);
            border-radius: 10px 0 0 10px;
        }

        .input-group .form-control {
            border-left: none;
            border-radius: 0 10px 10px 0;
        }

        .btn-login {
            background: linear-gradient(135deg, #8B0000, #c0392b);
            border: none;
            color: white;
            font-weight: 600;
            padding: 0.8rem;
            border-radius: 10px;
            font-size: 1rem;
            width: 100%;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(139, 0, 0, 0.4);
        }

        .btn-login:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 20px rgba(139, 0, 0, 0.5);
            background: linear-gradient(135deg, #a00000, #d44f4f);
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .alert-error {
            background: rgba(220, 53, 69, 0.15);
            border: 1px solid rgba(220, 53, 69, 0.3);
            color: #ff6b7a;
            border-radius: 10px;
            padding: 0.75rem 1rem;
            font-size: 0.875rem;
        }

        .divider {
            border-color: rgba(255,255,255,0.1);
            margin: 1.5rem 0;
        }

        .hint-text {
            color: rgba(255,255,255,0.35);
            font-size: 0.78rem;
            text-align: center;
        }

        .back-link {
            color: rgba(255,255,255,0.5);
            font-size: 0.85rem;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.4rem;
            justify-content: center;
            margin-top: 1.5rem;
            transition: color 0.2s;
        }

        .back-link:hover {
            color: rgba(255,255,255,0.9);
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="brand-logo">
                <div class="icon-wrap">
                    <i class="bi bi-shield-lock-fill"></i>
                </div>
                <h4>Admin O'BeefSoup</h4>
                <p>Hệ thống quản trị nội bộ</p>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Error as string))
            {
                <div class="alert-error mb-3">
                    <i class="bi bi-exclamation-circle me-2"></i>@ViewBag.Error
                </div>
            }

            <form asp-area="Admin" asp-controller="Account" asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input type="email" class="form-control" name="email" placeholder="Nhập email..."
                               autocomplete="email" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mật khẩu</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input type="password" class="form-control" name="password" placeholder="Nhập mật khẩu..."
                               autocomplete="current-password" required />
                    </div>
                </div>

                <button type="submit" class="btn-login">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Đăng Nhập
                </button>
            </form>

            <hr class="divider">
            <p class="hint-text">
                <i class="bi bi-info-circle me-1"></i>
                Liên hệ Admin để được cấp tài khoản
            </p>
        </div>

        <a href="/" class="back-link">
            <i class="bi bi-arrow-left"></i> Về trang chủ O'BeefSoup
        </a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
