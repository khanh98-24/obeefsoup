@{
    ViewData["Title"] = "Thông Tin Database";
}

<div class="container-fluid">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
        <div>
            <h3 class="fw-bold mb-0">Thông Tin Database</h3>
            <p class="text-muted small mb-0">Xem cấu trúc và kết nối cơ sở dữ liệu hệ thống.</p>
        </div>
        <div class="w-100 w-md-auto">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-white border d-flex align-items-center justify-content-center gap-2 shadow-sm w-100 w-md-auto">
                <i class="bi bi-arrow-left"></i> Quay lại Dashboard
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold text-info">Kết Nối Database</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small">Connection String:</label>
                        <div class="alert alert-light mb-0">
                            <code>@ViewBag.ConnectionString</code>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small">Database Name:</label>
                        <p class="mb-0"><strong>OBeefSoupDb</strong></p>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small">Server:</label>
                        <p class="mb-0">SQL Server LocalDB</p>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold text-primary">Các Bảng Trong Database</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-table me-2"></i>Products</span>
                            <span class="badge bg-primary rounded-pill">Sản phẩm</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-table me-2"></i>Categories</span>
                            <span class="badge bg-primary rounded-pill">Danh mục</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-table me-2"></i>Orders</span>
                            <span class="badge bg-primary rounded-pill">Đơn hàng</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-table me-2"></i>OrderItems</span>
                            <span class="badge bg-primary rounded-pill">Chi tiết đơn</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-table me-2"></i>Customers</span>
                            <span class="badge bg-primary rounded-pill">Khách hàng</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-table me-2"></i>StoreLocations</span>
                            <span class="badge bg-primary rounded-pill">Cửa hàng</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-lightbulb me-2"></i>Hướng Dẫn</h5>
                    
                    <h6 class="mt-3">Xem Database trong Visual Studio:</h6>
                    <ol class="small">
                        <li>Mở <strong>View</strong> → <strong>SQL Server Object Explorer</strong></li>
                        <li>Mở rộng <strong>(localdb)\MSSQLLocalDB</strong></li>
                        <li>Mở rộng <strong>Databases</strong></li>
                        <li>Tìm <strong>OBeefSoupDb</strong></li>
                        <li>Mở rộng <strong>Tables</strong> để xem các bảng</li>
                    </ol>

                    <hr>

                    <h6>Sử dụng SQL Server Management Studio:</h6>
                    <ol class="small">
                        <li>Mở SSMS</li>
                        <li>Server name: <code>(localdb)\MSSQLLocalDB</code></li>
                        <li>Authentication: <strong>Windows Authentication</strong></li>
                        <li>Click <strong>Connect</strong></li>
                    </ol>

                    <hr>

                    <h6>Command Line (sqlcmd):</h6>
                    <div class="alert alert-secondary small mb-0">
                        <code>sqlcmd -S (localdb)\MSSQLLocalDB</code>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
