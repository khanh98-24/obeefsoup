@model OBeefSoup.Models.CandidateApplication
@{
    ViewData["Title"] = "Chi tiết hồ sơ ứng tuyển";
}

<div class="container-fluid">
    <div class="mb-4">
        <a asp-action="Index" class="text-decoration-none text-muted small d-flex align-items-center gap-1">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
        <div class="d-flex justify-content-between align-items-center mt-2">
            <h3 class="fw-bold mb-0">Hồ sơ: @Model.FullName</h3>
            <div class="dropdown">
                <button class="btn btn-white border shadow-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-gear me-1"></i> Thay đổi trạng thái
                </button>
                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-sm">
                    <li><form asp-action="UpdateStatus" asp-route-id="@Model.Id" asp-route-status="Pending" method="post"><button type="submit" class="dropdown-item">Chờ duyệt</button></form></li>
                    <li><form asp-action="UpdateStatus" asp-route-id="@Model.Id" asp-route-status="Reviewed" method="post"><button type="submit" class="dropdown-item">Đã xem hồ sơ</button></form></li>
                    <li><form asp-action="UpdateStatus" asp-route-id="@Model.Id" asp-route-status="Interviewing" method="post"><button type="submit" class="dropdown-item">Đang phỏng vấn</button></form></li>
                    <li><form asp-action="UpdateStatus" asp-route-id="@Model.Id" asp-route-status="Hired" method="post"><button type="submit" class="dropdown-item text-success fw-bold">Đã tuyển</button></form></li>
                    <li><form asp-action="UpdateStatus" asp-route-id="@Model.Id" asp-route-status="Rejected" method="post"><button type="submit" class="dropdown-item text-danger">Từ chối</button></form></li>
                </ul>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3 border-0">
                    <h5 class="fw-bold mb-0">Thông tin ứng viên</h5>
                </div>
                <div class="card-body p-4 pt-0">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="text-muted small d-block">Họ và tên</label>
                            <span class="fw-bold fs-5">@Model.FullName</span>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small d-block">Trạng thái hiện tại</label>
                            @switch (Model.Status)
                            {
                                case OBeefSoup.Models.ApplicationStatus.Pending:
                                    <span class="badge bg-warning-subtle text-warning border border-warning-subtle py-1 px-3 rounded-pill">Chờ duyệt</span>
                                    break;
                                case OBeefSoup.Models.ApplicationStatus.Reviewed:
                                    <span class="badge bg-info-subtle text-info border border-info-subtle py-1 px-3 rounded-pill">Đã xem hồ sơ</span>
                                    break;
                                case OBeefSoup.Models.ApplicationStatus.Interviewing:
                                    <span class="badge bg-primary-subtle text-primary border border-primary-subtle py-1 px-3 rounded-pill">Đang phỏng vấn</span>
                                    break;
                                case OBeefSoup.Models.ApplicationStatus.Hired:
                                    <span class="badge bg-success-subtle text-success border border-success-subtle py-1 px-3 rounded-pill">Đã tuyển</span>
                                    break;
                                case OBeefSoup.Models.ApplicationStatus.Rejected:
                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle py-1 px-3 rounded-pill">Từ chối</span>
                                    break;
                            }
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small d-block">Email</label>
                            <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small d-block">Số điện thoại</label>
                            <a href="tel:@Model.PhoneNumber" class="text-decoration-none">@Model.PhoneNumber</a>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.CVUrl))
                        {
                            <div class="col-12">
                                <label class="text-muted small d-block">Link CV / Hồ sơ đính kèm</label>
                                <a href="@Model.CVUrl" target="_blank" class="btn btn-sm btn-outline-primary mt-1">
                                    <i class="bi bi-file-earmark-pdf me-1"></i> Xem hồ sơ ứng viên
                                </a>
                            </div>
                        }
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="mb-4">
                        <label class="text-muted small d-block mb-2">Giới thiệu bản thân / Kinh nghiệm</label>
                        <div class="bg-light p-3 rounded-3" style="white-space: pre-line;">
                            @Model.Introduction
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="fw-bold mb-0">Vị trí ứng tuyển</h6>
                </div>
                <div class="card-body pt-0">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="bg-primary bg-opacity-10 text-primary p-3 rounded-3">
                            <i class="bi bi-briefcase fs-4"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0">@Model.JobPosting?.Title</h6>
                            <small class="text-muted">ID Tin: #@Model.JobPostingId</small>
                        </div>
                    </div>
                    <a asp-controller="JobPostings" asp-action="Edit" asp-route-id="@Model.JobPostingId" class="btn btn-sm btn-light border w-100">
                        Chi tiết tin tuyển dụng
                    </a>
                </div>
            </div>
            
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="fw-bold mb-0">Lịch sử hệ thống</h6>
                </div>
                <div class="card-body pt-0">
                    <div class="d-flex gap-3 mb-0">
                        <div class="text-center">
                            <i class="bi bi-clock-history text-muted"></i>
                        </div>
                        <div>
                            <small class="text-muted d-block">Ngày nộp hồ sơ:</small>
                            <span class="fw-medium">@Model.AppliedDate.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-primary-subtle { background-color: #e7f1ff; color: #0d6efd; }
    .bg-warning-subtle { background-color: #fff3cd; color: #856404; }
    .bg-success-subtle { background-color: #d1e7dd; color: #0f5132; }
    .bg-danger-subtle { background-color: #f8d7da; color: #842029; }
    .bg-info-subtle { background-color: #cff4fc; color: #055160; }
</style>
