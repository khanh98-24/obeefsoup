@model List<OBeefSoup.Models.Banner>
@{
    ViewData["Title"] = "Quản lý Banner";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-0">Quản lý Banner</h3>
            <p class="text-muted small mb-0">Quản lý các hình ảnh quảng cáo hiển thị trên trang chủ.</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2 shadow-sm">
                <i class="bi bi-plus-lg"></i> Thêm Banner mới
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        @if (Model.Any())
        {
            @foreach (var banner in Model.OrderBy(b => b.DisplayOrder))
            {
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm h-100 overflow-hidden banner-card @(!banner.IsActive ? "inactive" : "")">
                        <div class="position-relative">
                            <img src="@banner.ImageUrl" class="card-img-top" alt="@banner.Title" 
                                 style="height: 240px; object-fit: cover;" 
                                 onerror="this.src='https://placehold.co/1200x400/8B0000/FFF?text=N/A'" />
                            <div class="position-absolute top-0 end-0 m-3">
                                @if (banner.IsActive)
                                {
                                    <span class="badge bg-success py-1 px-3 rounded-pill shadow-sm">Đang hiển thị</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary py-1 px-3 rounded-pill shadow-sm">Tạm ẩn</span>
                                }
                            </div>
                            <div class="position-absolute bottom-0 start-0 m-3 px-2 py-1 bg-dark bg-opacity-75 text-white rounded small shadow-sm">
                                <i class="bi bi-sort-numeric-down me-1"></i> Thứ tự: @banner.DisplayOrder
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="fw-bold text-dark mb-0">@banner.Title</h5>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light border no-caret px-2" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end border-0 shadow-sm small">
                                        <li><a class="dropdown-item py-2" asp-action="Edit" asp-route-id="@banner.Id"><i class="bi bi-pencil me-2"></i> Chỉnh sửa</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item py-2 text-danger" asp-action="Delete" asp-route-id="@banner.Id"><i class="bi bi-trash me-2"></i> Xóa banner</a></li>
                                    </ul>
                                </div>
                            </div>
                            <p class="text-muted small mb-3">@(string.IsNullOrEmpty(banner.Description) ? "Không có mô tả." : banner.Description)</p>
                            
                            @if (!string.IsNullOrEmpty(banner.Link))
                            {
                                <div class="d-flex align-items-center gap-2 text-primary small">
                                    <i class="bi bi-link-45deg"></i>
                                    <a href="@banner.Link" target="_blank" class="text-decoration-none text-truncate">@banner.Link</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="card border-0 shadow-sm py-5">
                    <i class="bi bi-images display-1 text-muted opacity-25"></i>
                    <h5 class="mt-3 text-muted">Chưa có banner nào được tạo</h5>
                    <div class="mt-3">
                        <a asp-action="Create" class="btn btn-primary px-4">Tạo banner đầu tiên</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .banner-card { transition: transform 0.2s; }
    .banner-card:hover { transform: translateY(-5px); }
    .banner-card.inactive { opacity: 0.75; }
    .no-caret::after { display: none; }
</style>
