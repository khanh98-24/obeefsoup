@model IEnumerable<OBeefSoup.Models.BlogPost>
@{
    ViewData["Title"] = "Quản lý bài viết";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-0">Quản lý bài viết</h3>
            <p class="text-muted small mb-0">Viết và quản lý các bài blog, tin tức khuyến mãi.</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2 shadow-sm">
                <i class="bi bi-pencil-square"></i> Viết bài mới
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light bg-opacity-50">
                        <tr class="text-muted small">
                            <th class="ps-4 border-0">Thông tin bài viết</th>
                            <th class="border-0">Trạng thái</th>
                            <th class="border-0">Ngày đăng</th>
                            <th class="text-end pe-4 border-0">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="bi bi-journal-x display-4 opacity-25"></i>
                                    <p class="mt-2 text-muted">Chưa có bài viết nào được tạo</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center gap-3">
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" alt="@item.Title" 
                                                     class="rounded-3 shadow-sm" 
                                                     style="width: 80px; height: 50px; object-fit: cover; border: 1px solid #eee;" />
                                            }
                                            else
                                            {
                                                <div class="rounded-3 bg-light d-flex align-items-center justify-content-center border" style="width: 80px; height: 50px;">
                                                    <i class="bi bi-image text-muted opacity-25"></i>
                                                </div>
                                            }
                                            <div>
                                                <div class="fw-bold text-dark">@item.Title</div>
                                                <div class="text-muted small">@item.Slug</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success-subtle text-success py-1 px-2 rounded-pill small">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-muted py-1 px-2 rounded-pill small">Tạm ẩn</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="text-dark small">@item.CreatedDate.ToString("dd/MM/yyyy")</div>
                                        <small class="text-muted x-small">@item.CreatedDate.ToString("HH:mm")</small>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-light border no-caret px-2" data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-sm small">
                                                <li><a class="dropdown-item py-2" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil me-2"></i> Chính sửa</a></li>
                                                <li><a class="dropdown-item py-2 text-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash me-2"></i> Xóa bài viết</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .x-small { font-size: 0.7rem; }
    .no-caret::after { display: none; }
    .table > :not(caption) > * > * { padding: 1rem 0.75rem; }
</style>
