@model OBeefSoup.Models.BlogPost
@{
    ViewData["Title"] = "Xóa bài viết";
    Layout = "_AdminLayout";
}

<div class="mb-4">
    <h2>Xác nhận xóa bài viết</h2>
    <p class="text-danger">Hành động này không thể hoàn tác. Bạn có chắc chắn muốn xóa bài viết này?</p>
</div>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title" />
                }
                else
                {
                    <div class="bg-light rounded d-flex align-items-center justify-content-center h-100" style="min-height: 150px;">
                        <i class="bi bi-image fs-1 text-muted"></i>
                    </div>
                }
            </div>
            <div class="col-md-9">
                <h3 class="h4">@Model.Title</h3>
                <p class="text-muted">@Model.Summary</p>
                <div class="mb-3">
                    <span class="badge bg-light text-dark border">Ngày tạo: @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</span>
                    <span class="badge @(Model.IsActive ? "bg-success-subtle text-success" : "bg-secondary-subtle text-secondary") border">
                        @(Model.IsActive ? "Đang hiển thị" : "Đang ẩn")
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-x-lg me-1"></i>Hủy bỏ
        </a>
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash me-1"></i>Xác nhận xóa vĩnh viễn
        </button>
    </div>
</form>
